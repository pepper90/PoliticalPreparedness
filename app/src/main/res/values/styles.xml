<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BASE APPLICATION THEME -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Sets action bar text color to white. -->
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <!-- LAUNCH SCREEN BUTTONS STYLE -->
    <style name="MyLaunchButtons" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- RECYCLER VIEW HEADER STYLE -->
    <style name="MyHeader" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingVertical">@dimen/dp8</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray50</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- RECYCLER ITEM STYLES -->
    <style name="MyItemTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/gray50</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyItemSubtitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/gray50</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- TOOLBAR STYLE -->
    <style name="MyToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/dp8</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- VOTER INFO DETAIL STYLES -->
    <style name="VoterInfoElectionDate" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/gray50</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/dp20</item>
    </style>

    <style name="VoterInfoElectionHeader" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/gray50</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginTop">@dimen/dp20</item>
    </style>

    <style name="VoterInfoElectionDetails" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/gray50</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/dp8</item>
        <item name="android:layout_marginStart">@dimen/dp8</item>
    </style>

    <style name="MyFollowButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginVertical">@dimen/dp20</item>
        <item name="android:layout_marginHorizontal">@dimen/dp20</item>
    </style>

    <!-- REPRESENTATIVE STYLES -->

    <style name="MySearchButtons" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/dp15</item>
    </style>

</resources>
