<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- LAUNCH SCREEN BUTTONS STYLE -->
    <style name="MyLaunchButtons" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- RECYCLER VIEW HEADER STYLE -->
    <style name="MyRecyclerViewHeaders" parent="Widget.MaterialComponents.TextView">
        <item name="android:padding">@dimen/dp8</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray50</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- RECYCLER ITEM STYLES -->
    <style name="MyElectionName" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/gray50</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyElectionDate" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/gray50</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
